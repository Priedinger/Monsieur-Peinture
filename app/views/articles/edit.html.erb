<div class="container">
  <%= simple_form_for @article do |f| %>
    <%= f.input :title, label: "Titre de l'article" %>
    <%= f.input :content, as: :rich_text_area, label: "Contenu de l'article" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true, id: 'photo-input' } %>
    <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    <%= f.button :submit, "Editer l'article", :class => "btn btn-primary w-100" %>
  <% end %>
</div>


