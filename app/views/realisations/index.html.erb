<div class="container">
    <%= link_to "créer une réalisation", new_realisation_path %>

    <div class="realisations-navbar">
      <%= link_to 'Nos réalisations', realisations_path %>
      <div class="realisations-navbar-filters">

        <div class="filter">
          <%= link_to 'Fresques décoratives', realisations_path %>
        </div>
        <div class="filter">
          <%= link_to 'Art Urbain',  realisations_path%>
        </div>
        <div class="filter">
          <%= link_to 'Publicités peintes', realisations_path %>
        </div>
        <div class="filter">
          <%= link_to 'Signalétique', realisations_path %>
        </div>
      </div>
    </div>

  <div class="realisations-grid">

    <% @realisations.each do |realisation| %>
      <div class="realisation">
        <%= link_to realisation_path(realisation) do %>
          <%= cl_image_tag realisation.photos.first.key, crop: :fill %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
