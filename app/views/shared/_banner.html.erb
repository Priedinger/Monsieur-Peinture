  <div class="carousel-inner">
    <%  @current_banners.each_with_index do |banner, index|%>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= cl_image_tag banner.photo.key, class: "d-block w-100"%>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= cl_image_tag banner.photo.key, class: "d-block w-100"%>
        </div>
      <% end %>
    <% end %>
  </div><!--
  <a class="carousel-control-prev" href="#Carroussel<%= @current_banners %>" role="button" data-slide="prev">
