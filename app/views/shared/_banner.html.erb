



  <div id="Carroussel<%= @current_banner.id %>" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="false">
          <div class="carousel-inner">
            <%  @current_banner.photos.each_with_index do |photo, index|%>
              <% if index == 0 %>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, class: "d-block w-100"%>
                </div>
              <% else %>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, class: "d-block w-100"%>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#Carroussel<%= @current_banner.id %>" role="button" data-slide="prev">
            <i class="fas fa-chevron-left"></i>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#Carroussel<%= @current_banner.id %>" role="button" data-slide="next">
            <i class="fas fa-chevron-right"></i>
            <span class="sr-only">Next</span>
          </a>
        </div>
