<div class="realisation-grid" data-controller="drag" data-drag-url="/realisations/:id/move">
  <% all_realisations.order(position: :desc).each do |realisation| %>
  <div class="card">
    <% if realisation.photos.attached? %>
      <%= cl_image_tag(realisation.photos.first.key, class: "card-img-top img-cover", height: 150) %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= realisation.title %></h5>
      
      <% if realisation.description %>
        <p class="card-text"><i>Pas de description</i></p>
      <% else %>
        <p class="card-text"><%= realisation.description %></p>

      <% end %>
      
    </div>
    <div class="card-footer">
      <%= link_to edit_realisation_path(realisation.id) do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to "Supprimer", realisation_path(realisation.id), method: :delete, :remote => true, data: {confirm: "Supprimer définitivement ?", controller: 'destroy', action: 'destroy#delete' } %>
