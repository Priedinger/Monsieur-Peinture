  <div class="carousel-inner">
    <%  @current_verbatims.each_with_index do |verbatim, index|%>
      <% if index == 0 %>
        <div class="carousel-item active">
          <div class="verbatim">
            <div class="verbatim-infos">
              <p> <%= verbatim.citation %> </p>
              <p> <%= verbatim.author %></p>
            </div>
            <div class="verbatim-photo">
              <%= cl_image_tag verbatim.photo.key %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="carousel-item">
          <div class="verbatim">
            <div class="verbatim-infos">
              <p> <%= verbatim.citation %> </p>
              <p> <%= verbatim.author %></p>
            </div>
            <div class="verbatim-photo">
              <%= cl_image_tag verbatim.photo.key %>
            </div>
          </div>
     </div>
      <% end %>
    <% end %>
  </div><!--
  <a class="carousel-control-prev" href="#Carroussel<%= @current_verbatims %>" role="button" data-slide="prev">
    <i class="fas fa-chevron-left"></i>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#Carroussel<%= @current_verbatims %>" role="button" data-slide="next">
    <i class="fas fa-chevron-right"></i>
    <span class="sr-only">Next</span>
  </a> -->
</div>




<% end %>

















