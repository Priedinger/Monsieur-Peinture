<div class="container">
  <%= simple_form_for @verbatim do |f| %>
    <%= f.input :author %>
    <%= f.input :citation, input_html: {rows: 5}%>
    <%= f.input :photo, as: :file %>
    <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    <%= f.button :submit, "Create", :class => "btn btn-primary w-100" %>
  <% end %>
</div>
